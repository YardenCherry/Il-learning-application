<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/teacherProfile_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/lightBlue"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/teacherProfile_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="My Profile"
            android:textSize="40sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/teacherProfile_layout"
        android:orientation="vertical"
        >
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/aboutMe_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About me:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/overview_LBL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/aboutMe_LBL"
            android:layout_alignStart="@id/aboutMe_LBL"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:maxLines="10"
            android:minLines="2"
            android:textSize="12sp"
            tools:text="@string/lorem_ipsum" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/my_lesson_price_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview_LBL"
            android:text="Lesson price:"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:textSize="15sp"
            android:layout_marginTop="10dp"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/price_LBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_lesson_price_LBL"
            android:paddingStart="@dimen/fab_margin"
            android:text="0"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:layout_marginTop="5dp"/>



    </RelativeLayout>

</RelativeLayout>